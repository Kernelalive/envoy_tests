{
  "listeners": [
    {
      "address": "tcp://0.0.0.0:80",
      "filters": [
        {
           "type": "read",
           "name": "tcp_proxy",
           "config": {
             "stat_prefix": "tcp",
             "route_config": {
               "routes": [
                 {
                  "source_ip_list": ["192.168.7.2/24"],
                   "cluster": "service1"
                 }
               ]
             }
           }
         }
      ]
    }
  ],
  "admin": {
    "access_log_path": "/dev/null",
    "address": "tcp://0.0.0.0:8001"
  },
  "cluster_manager": {
    "clusters": [
      {
        "name": "service1",
        "connect_timeout_ms": 250,
        "type": "strict_dns",
        "lb_type": "round_robin",
        "features": "http2",
        "hosts": [
          {
            "url": "tcp://service1:80"
          }
        ]
      },
      {
        "name": "service2",
        "connect_timeout_ms": 250,
        "type": "strict_dns",
        "lb_type": "round_robin",
        "features": "http2",
        "hosts": [
          {
            "url": "tcp://service2:80"
          }
        ]
      }
    ]
  }
}
